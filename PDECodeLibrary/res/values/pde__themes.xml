<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PDE" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleBackgroundStyle">@style/actionBarStyle</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_bottom_line</item>
    	<item name="actionBarStyle">@style/actionBarStyle</item>
    	<item name="actionModeBackground">@drawable/action_mode_background</item>
    	<item name="actionModeSplitBackground">@drawable/action_mode_split_background</item>
    </style>
    <style name="Theme.PDE.NoActionBar" parent="Theme.PDE">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="actionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/action_mode_background</item>
        <item name="background">@drawable/action_mode_background</item>
    </style>

    <!-- ################################################################################################# -->

    <style name="Theme.Pde" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_pde</item>
        <item name="popupMenuStyle">@style/PopupMenu.Pde</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Pde</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Pde</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Pde</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Pde</item>
        <item name="actionModeBackground">@drawable/action_mode_background</item>
        <item name="actionModeSplitBackground">@drawable/action_mode_split_background</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Pde</item>
    </style>

    <style name="Theme.PDEDialog" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Pde.NoBackground" parent="@style/Theme.Pde">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>



</resources>