    <declare-styleable name="PDEButton">
        <attr name="text"/>
        <attr name="typeface"/>
        <attr name="textSize"/>
        <attr name="titleColor"/>
        <attr name="textColor"/>
        <attr name="buttonColor" format="color"/>
        <attr name="src"/>
        <attr name="textAlignment">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="iconAlignment">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="leftAttached" value="2"/>
            <enum name="rightAttached" value="3"/>
        </attr>
        <attr name="checkboxAlignment">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="radioAlignment">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="backgroundType">
            <enum name="none" value="5"/>
            <enum name="beveled" value="8"/>
            <enum name="embossed" value="9"/>
            <enum name="flat" value="7"/>
            <enum name="indicative" value="10"/>
            <enum name="plate" value="11"/>
            <enum name="rect" value="12"/>
            <enum name="text" value="13"/>
        </attr>
        <attr name="overlay">
            <enum name="none" value="14"/>
            <enum name="checkbox" value="16"/>
            <enum name="radio" value="17"/>
        </attr>
        <attr name="iconColored" format="boolean"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="minButtonPadding" format="dimension"/>
        <attr name="minButtonPaddingLeft" format="dimension"/>
        <attr name="minButtonPaddingTop" format="dimension"/>
        <attr name="minButtonPaddingRight" format="dimension"/>
        <attr name="minButtonPaddingBottom" format="dimension"/>
        <attr name="selected" format="boolean"/>
        <attr name="roundedCornerConfiguration">
            <flag name="noCornersRounded" value="0x00000000" />
            <flag name="cornerTopLeftRounded" value="0x00000001" />
            <flag name="cornerTopRightRounded" value="0x00000002" />
            <flag name="cornerBottomLeftRounded" value="0x00000004" />
            <flag name="cornerBottomRightRounded" value="0x00000008" />
            <flag name="allCornersRounded" value="0x0000000f" />
        </attr>
        <attr name="iconToTextHeightRatio" />
    </declare-styleable>
    <declare-styleable name="PDEInputField">
        <attr name="text"/>
        <attr name="typeface"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="hint" format="string"/>
        <attr name="hintColor" format="color"/>
        <attr name="textColorHighlight" format="color"/>
        <attr name="cursorVisible" format="boolean"/>
        <attr name="password" format="boolean"/>
        <attr name="leftIcon" format="reference|string"/>
        <attr name="selectAllOnFocus" format="boolean"/>
        <attr name="clearButtonEnabled" format="boolean"/>
        <attr name="ellipsize" format="enum">
            <!--VALUES MUST BE THE SAME LIKE THE ORIGINAL ELLIPSIZE ATTRIBUTE OF EDITTEXT, names could be different
               We check against xml attributes in code to avoid 2 different types (our and original),
               and to avoid double handling with an extra enumeration for our supported types.
               So we don't have to check if xml is consistent to our enum/values and check these against the original values.
                -> !!!! Be sure that the xml values are consistent to the original values !!!!
            -->
            <enum name="none" value="0"/>
            <enum name="start" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="end" value="3"/>
        </attr>
        <attr name="imeOptions" >
            <!--VALUES MUST BE THE SAME LIKE THE ORIGINAL imeOptions ATTRIBUTE OF EditorInfo, names could be different
               We cant check against xml attributes in code to avoid 2 different types (our and original)
               and to avoid double handling with an extra enumeration for our supported types, because this isn`t really a
               flag array. Rethink if we can handle check otherwise
                -> !!!! Be sure that the xml values are consistent to the original values !!!!
                   at the moment every option is supported
                -->
            <flag name="normal" value="0x00000000" />
            <flag name="actionUnspecified" value="0x00000000" />
            <flag name="actionNone" value="0x00000001" />
            <flag name="actionGo" value="0x00000002" />
            <flag name="actionSearch" value="0x00000003" />
            <flag name="actionSend" value="0x00000004" />
            <flag name="actionNext" value="0x00000005" />
            <flag name="actionDone" value="0x00000006" />
            <flag name="actionPrevious" value="0x00000007" />
            <flag name="flagNoFullscreen" value="0x2000000" />
            <flag name="flagNavigatePrevious" value="0x4000000" />
            <flag name="flagNavigateNext" value="0x8000000" />
            <flag name="flagNoExtractUi" value="0x10000000" />
            <flag name="flagNoAccessoryAction" value="0x20000000" />
            <flag name="flagNoEnterAction" value="0x40000000" />
            <flag name="flagForceAscii" value="0x80000000" />
        </attr>
        <attr name="iconToTextHeightRatio" />
        <attr name="inputType" >
            <!--VALUES MUST BE THE SAME LIKE THE ORIGINAL inputType ATTRIBUTE OF EDITTEXT, names could be different
               We check against xml attributes in code to avoid 2 different types (our and original),
               and to avoid double handling with an extra enumeration for our supported types.
               So we don't have to check if xml is consistent to our values and check these against the original values.
                -> !!!! Be sure that the xml values are consistent to the original values !!!!

               not supportet tat the moment: textMultiLine,textImeMultiLine
           -->
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textCapCharacters" value="0x00001001" />
            <flag name="textCapWords" value="0x00002001"/>
            <flag name="textCapSentences" value="0x00004001"/>
            <flag name="textAutoCorrect" value="0x00008001"/>
            <flag name="textAutoComplete" value="0x00010001"/>
            <flag name="textNoSuggestions" value="0x00080001"/>
            <flag name="textUri" value="0x00000011"/>
            <flag name="textEmailAddress" value="0x00000021"/>
            <flag name="textEmailSubject" value="0x00000031"/>
            <flag name="textShortMessage" value="0x00000041"/>
            <flag name="textLongMessage" value="0x00000051"/>
            <flag name="textPersonName" value="0x00000061"/>
            <flag name="textPostalAddress" value="0x00000071"/>
            <flag name="textPassword" value="0x00000081"/>
            <flag name="textVisiblePassword" value="0x00000091"/>
            <flag name="textWebEditText" value="0x000000a1"/>
            <flag name="textFilter" value="0x000000b1"/>
            <flag name="textPhonetic" value="0x000000c1"/>
            <flag name="textWebEmailAddress" value="0x000000d1"/>
            <flag name="textWebPassword" value="0x000000e1"/>
            <flag name="number" value="0x00000002"/>
            <flag name="numberSigned" value="0x00001002"/>
            <flag name="numberDecimal" value="0x00002002"/>
            <flag name="numberPassword" value="0x00000012"/>
            <flag name="phone" value="0x00000003"/>
            <flag name="datetime" value="0x00000004"/>
            <flag name="date" value="0x00000014"/>
            <flag name="time" value="0x00000024"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="PDEBoundedRelativeLayout">
