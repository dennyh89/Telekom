<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#55000000"
        android:id="@+id/okdialog_root">
    <!-- the max_width will be set programmatically to 28 BU -->
    <de.telekom.pde.codelibrary.ui.layout.PDEBoundedRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Telekom.BU2"
            android:id="@+id/okdialog_boundedplane"
            android:layout_centerInParent="true"
            pdecodelibrary:max_width="@dimen/Telekom.BU7"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/okdialog_linearlayout"
            >
            <!-- This view takes care hat the dialog is a wide as possible, even if there is no title area -->
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/okdialog_title_area">

                <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDELayerTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/okdialog_title"
                        android:layout_marginLeft="@dimen/Telekom.BU"
                        android:layout_marginRight="@dimen/Telekom.BU"
                        pdecodelibrary:paddingTop="@dimen/Telekom.BU"
                        pdecodelibrary:paddingBottom="@dimen/Telekom.BU"
                        pdecodelibrary:alignmentMode="capHeight"
                        pdecodelibrary:maxLines="1"
                        pdecodelibrary:ellipsizeText="true"
                        />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:id="@+id/okdialog_title_delimiter"
                    />
            </LinearLayout>

            <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDELayerTextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/okdialog_message"
                    android:layout_marginLeft="@dimen/Telekom.BU"
                    android:layout_marginRight="@dimen/Telekom.BU"
                    pdecodelibrary:paddingTop="@dimen/Telekom.BU"
                    pdecodelibrary:paddingBottom="@dimen/Telekom.BU"
                    pdecodelibrary:alignmentMode="capHeight"
                    />
                    <de.telekom.pde.codelibrary.ui.components.buttons.PDEButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/Telekom.BU3"
                            android:id="@+id/okdialog_exit"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/Telekom.BU"
                            android:layout_marginBottom="@dimen/Telekom.BU"
                            android:layout_marginLeft="@dimen/Telekom.BU"
                            android:layout_marginRight="@dimen/Telekom.BU"
                            pdecodelibrary:buttonColor="@color/DTMagenta"
                            pdecodelibrary:text="@string/pde_okdialog_exit_button"
                            />
        </LinearLayout>

    </de.telekom.pde.codelibrary.ui.layout.PDEBoundedRelativeLayout>

</RelativeLayout>