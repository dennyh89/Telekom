<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pdecodelibrary="http://schemas.android.com/apk/res-auto"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#55000000"
                android:id="@+id/progressdialog_root">
    <!-- the max_width will be set programmatically to 28 BU -->
    <de.telekom.pde.codelibrary.ui.layout.PDEBoundedRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Telekom.BU2"
            android:id="@+id/progressdialog_boundedplane"
            android:layout_centerInParent="true"
            pdecodelibrary:max_width="@dimen/Telekom.BU7"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/progressdialog_linearlayout"
                >
            <!-- This view takes care hat the dialog is a wide as possible, even if there is no title area -->
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/progressdialog_title_area">
                <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressdialog_title"
                        android:layout_marginTop="@dimen/Telekom.BU"
                        android:layout_marginLeft="@dimen/Telekom.BU"
                        android:layout_marginRight="@dimen/Telekom.BU"
                        /> -->

                <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressdialog_title"
                    android:layout_marginLeft="@dimen/Telekom.BU"
                    android:layout_marginRight="@dimen/Telekom.BU"
                    pdecodelibrary:paddingTop="@dimen/Telekom.BU"
                    pdecodelibrary:paddingBottom="@dimen/Telekom.BU"
                    pdecodelibrary:alignmentMode="capHeight"
                    pdecodelibrary:maxLines="1"
                    pdecodelibrary:ellipsizeText="true"
                    />

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:id="@+id/progressdialog_title_delimiter"
                        />
            </LinearLayout>
            <!--  <TextView
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/progressdialog_message"
                      android:gravity="center_horizontal"
                      android:layout_marginTop="@dimen/Telekom.BU"
                      android:layout_marginBottom="@dimen/Telekom.BU"
                      android:layout_marginLeft="@dimen/Telekom.BU"
                      android:layout_marginRight="@dimen/Telekom.BU"
                      /> -->

              <de.telekom.pde.codelibrary.ui.components.elementwrappers.PDETextView
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/progressdialog_message"
                      android:layout_marginLeft="@dimen/Telekom.BU"
                      android:layout_marginRight="@dimen/Telekom.BU"
                      pdecodelibrary:paddingTop="@dimen/Telekom.BU"
                      pdecodelibrary:paddingBottom="@dimen/Telekom.BU"
                      pdecodelibrary:horizontalAlignment="left"
                      />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Telekom.BU"
                    android:layout_marginBottom="@dimen/Telekom.BU2"
                    android:layout_marginLeft="@dimen/Telekom.BU"
                    android:layout_marginRight="@dimen/Telekom.BU"
                    >

                <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:layout_centerHorizontal="true"
                        />
            </RelativeLayout>

        </LinearLayout>

    </de.telekom.pde.codelibrary.ui.layout.PDEBoundedRelativeLayout>

</RelativeLayout>