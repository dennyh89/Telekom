<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Pde" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_pde</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Pde</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Pde</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Pde</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Pde</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Pde</item>
        <item name="android:actionModeBackground">@drawable/action_mode_background</item>
        <item name="android:actionModeSplitBackground">@drawable/action_mode_split_background</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Pde</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow.PDE</item>
    </style>

    <style name="ActionBar.Solid.Pde" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/action_mode_background</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_pde</item>
        <item name="android:backgroundSplit">@drawable/action_mode_split_background</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Pde</item>
    </style>

    <style name="ActionBar.Transparent.Pde" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_pde</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Pde</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Pde.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Pde</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Pde</item>
    </style>

